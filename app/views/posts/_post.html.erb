<div class="post">
    <%= link_to post.author.username, user_path(post.author.id) %>
    <p><%= post.body %></p>
    <p><%= post.datetime.to_fs(:short) %></p>
    <%= render "likes/likes", post: post %>
    <%= render "comments/form", post: post %>
    <div class="comments-container"><%= render post.comments%></div>
</div>