<%= turbo_frame_tag "modal" do %>
    <div class="modal" >
        <div>
            <p>Friend list</p>
            <%= link_to "#", data: {
                controller: "modals",
                action: "modals#close"
            }, class: "cancel-btn" do %>
                <%= image_tag 'icons/close.svg', class: 'like-btn' %>
            <% end %>
        </div>
        <hr>
        <div class="modal-list">
            <% @user.friends.each do |user| %>
                <%= link_to user_path(user.id), data: { turbo_frame: "_top" }, class: "modal-link" do %>
                    <% if user.image.attached? %>
                        <%= image_tag user.image, class: "profile-picture-small" %>
                    <% else %>
                        <%= image_tag 'icons/default-account-profile.svg', class: "profile-picture-small" %>
                    <% end %>
                    <p><%= user.username %></p>
                <% end %>
            <% end %>
        </div>
    </div>
<% end %>